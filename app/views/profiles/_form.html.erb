<%= form_for @profile do |f| %>
  <% @profile.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label>Nombre</label>
    <%= f.text_field :name, placeholder: "Nombre", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Meta de Kilos</label>
    <%= f.number_field :meta_kilos, placeholder: "Meta de Kilos x Mes", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to "Regresar", root_path, class: "btn btn-default" %>
  </div>
<% end %>
